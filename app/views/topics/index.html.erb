<div class="section">
  <h1>Topics</h1>
  <%= link_to "New topic", new_topic_path, class: "btn btn-primary" %>
</div>

<% @topics.each do |topic| %>
  <div class="card">
    <h2><%= link_to topic.name, topic %></h2>
    <p><%= topic.description %></p>
  </div>
<% end %>

<% parent_layout "app_view" %>
