<div class="row">
  <div class="col-md-8 center-block">
    <div class="card">
      <h1>New Sponsored Post</h1>
      <%= form_for [@topic, @sponsored_post] do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "sr-only" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter post title" %>
        </div>
        <div class="form-group">
          <%= f.label :body, class: "sr-only" %>
          <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Enter post body" %>
        </div>
        <div class="form-group">
          <%= f.label :price, class: "sr-only" %>
          <%= f.number_field :price, class: "form-control", placeholder: "Price" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
