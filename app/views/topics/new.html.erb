<div class="row">
  <div class="col-md-8 center-block">
    <div class="card">
      <h1>New Topic</h1>
      <%= form_for @topic do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "sr-only" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter topic name" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "sr-only" %>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter topic description" %>
        </div>
        <div class="form-group">
          <%= f.label :public do %>
            <%= f.check_box :public %> Public topic
          <% end %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
